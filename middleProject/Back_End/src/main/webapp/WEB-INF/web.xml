<!DOCTYPE web-app PUBLIC 
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- 애플리케이션 이름 -->
  <display-name>ToDaysHospital WebApp</display-name>

  <!-- 공통 인코딩 필터 (POST 한글 처리용) -->
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- 로그인 처리 서블릿 -->
  <servlet>
    <servlet-name>LoginOK</servlet-name>
    <servlet-class>com.todayhospital.controller.LoginOKController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginOK</servlet-name>
    <url-pattern>/login_ok.do</url-pattern>
  </servlet-mapping>

  <!-- 환영 페이지 기본 설정 -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <!-- 기본 오류 페이지 (선택적) -->
  <error-page>
    <error-code>404</error-code>
    <location>/views/error404.jsp</location>
  </error-page>

</web-app>
