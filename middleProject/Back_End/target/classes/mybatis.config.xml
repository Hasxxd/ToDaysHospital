<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!-- 공통 설정 -->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING" />
        <setting name="jdbcTypeForNull" value="NULL" />
    </settings>

    <!-- DTO 클래스 별칭 등록: 전체 패키지 스캔 방식 적용 -->
    <typeAliases>
        <package name="com.todayhospital.dto" />
    </typeAliases>

    <!-- 환경 설정: DBMS 환경 기준 : mybatis.config.xml -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">

                <!-- 환경 설정: 로컬 테스트용 "week" 계정 기준 세팅 -->
                <!-- <property name="driver" value="oracle.jdbc.OracleDriver" />
                <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
                <property name="username" value="week" />
                <property name="password" value="week" />
                -->

                <!-- 환경 설정: 로컬 네트워크 서버용 "팀계정" 계정 기준 세팅 -->
                <!-- (깃허브 퍼블릭 프로젝트 대처 외부 파일환경변수화)ddd -->
                <property name="driver" value="${db.driver}" />
                <property name="url" value="${db.url}" />
                <property name="username" value="${db.user}" />
                <property name="password" value="${db.password}" />
            </dataSource>
        </environment>
    </environments>

    <!-- 매퍼 파일 자동 인식: *.xml 패턴 허용 (추가시 수정 불필요) -->
    <mappers>
        <!-- [매퍼 .xml 구조 요약] -->
        <!--PatientMapper.xml   : 환자 인증 및 정보 조회
                → 관련 테이블: PATIENT, PREMEDICAL_FORM 등
                → 책임: 로그인, 환자 정보 조회, 진료 전 양식 제출 등
            
            AdminMapper.xml     : 관리자 인증 및 관리 기능
                → 관련 테이블: ADMIN, NOTICE, BOARD, MEM_FEEDBACK 등
                → 책임: 관리자 로그인, 공지사항 작성/관리, 환자 게시물 검토, 피드백 처리 등

            HospitalMapper.xml  : 병원 정보 및 의료진/진료일정 제공
                → 관련 테이블: HOSPITAL_BASIC_INFO, DETAILS_INFO, SCHEDULE, STAFF, RATING 등
                → 책임: 병원/의료진 기본정보 제공, 진료시간표 조회 등 (예약 가능시간 제공 포함)

            SystemLogMapper.xml : 시스템 사용 이력 및 통계 관리
                → 관련 테이블: SYSTEM_LOG, SYSTEM_USAGE_STATS
                → 책임: 로그인/로그아웃 기록, 사용자 활동 추적 및 관리자 통계 대시보드용 로그 수집

            ReservationMapper.xml : 예약 도메인 전담 매퍼 (신규 추가)
                → 관련 테이블: RESERVATION, RESERVATION_HISTORY, MEDICAL_SCHEDULE (읽기)
                → 책임:
                    - 예약 등록, 조회, 수정, 삭제
                    - 중복 검사 및 상태 변경 처리
                    - 예약 변경 이력 기록
                    - 진료 일정과의 충돌 검사
                    - 환자 본인 예약 내역 조회 (Controller 단 권한 필터링 전제)
                    - 로그 기록은 SystemLogMapper 위임
                    → 예약 도메인의 모든 CRUD 및 로직은 본 매퍼 단일 책임 원칙 적용
            -->

        <mapper resource="com/todayhospital/mappers/mybatis/PatientMapper.xml"/>
        <!-- 환자 관련 매퍼 -->
        <mapper resource="com/todayhospital/mappers/mybatis/AdminMapper.xml"/>
        <!-- 관리자 기능 매퍼 -->
        <mapper resource="com/todayhospital/mappers/mybatis/HospitalMapper.xml"/>
        <!-- 병원정보 및 일정 매퍼 -->
        <mapper resource="com/todayhospital/mappers/mybatis/SystemLogMapper.xml"/>
        <!-- 시스템 로그 기록 매퍼 -->
        <mapper resource="com/todayhospital/mappers/mybatis/ReservationMapper.xml"/>
        <!-- 예약 도메인 전담 매퍼 -->

    </mappers>

</configuration>
